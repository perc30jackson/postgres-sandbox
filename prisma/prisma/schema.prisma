// Prisma Schema for Learning PostgreSQL
// =====================================
// This schema mirrors the bookstore database created by sql/init.sql
// Run `prisma db pull` to introspect an existing database
// Run `prisma generate` to generate the Prisma Client

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Author model
model Author {
  id        Int       @id @default(autoincrement())
  name      String    @db.VarChar(100)
  email     String?   @unique @db.VarChar(150)
  bio       String?
  birthYear Int?      @map("birth_year")
  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz
  
  // Relation to books
  books     Book[]
  
  @@map("authors")
}

// Category model
model Category {
  id          Int     @id @default(autoincrement())
  name        String  @unique @db.VarChar(50)
  description String?
  
  // Relation to books
  books       Book[]
  
  @@map("categories")
}

// Book model
model Book {
  id            Int       @id @default(autoincrement())
  title         String    @db.VarChar(200)
  isbn          String?   @unique @db.VarChar(20)
  authorId      Int?      @map("author_id")
  categoryId    Int?      @map("category_id")
  price         Decimal   @default(0) @db.Decimal(10, 2)
  stockQuantity Int       @default(0) @map("stock_quantity")
  publishedDate DateTime? @map("published_date") @db.Date
  description   String?
  createdAt     DateTime  @default(now()) @map("created_at") @db.Timestamptz
  updatedAt     DateTime  @updatedAt @map("updated_at") @db.Timestamptz
  
  // Relations
  author        Author?   @relation(fields: [authorId], references: [id], onDelete: SetNull)
  category      Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  orderItems    OrderItem[]
  reviews       Review[]
  
  @@map("books")
}

// Customer model
model Customer {
  id        Int       @id @default(autoincrement())
  firstName String    @map("first_name") @db.VarChar(50)
  lastName  String    @map("last_name") @db.VarChar(50)
  email     String    @unique @db.VarChar(150)
  phone     String?   @db.VarChar(20)
  address   String?
  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz
  
  // Relations
  orders    Order[]
  reviews   Review[]
  
  @@map("customers")
}

// Order model
model Order {
  id          Int         @id @default(autoincrement())
  customerId  Int?        @map("customer_id")
  orderDate   DateTime    @default(now()) @map("order_date") @db.Timestamptz
  status      String      @default("pending") @db.VarChar(20)
  totalAmount Decimal     @default(0) @map("total_amount") @db.Decimal(10, 2)
  
  // Relations
  customer    Customer?   @relation(fields: [customerId], references: [id], onDelete: Cascade)
  items       OrderItem[]
  
  @@map("orders")
}

// OrderItem model (junction table)
model OrderItem {
  id              Int     @id @default(autoincrement())
  orderId         Int?    @map("order_id")
  bookId          Int?    @map("book_id")
  quantity        Int     @default(1)
  priceAtPurchase Decimal @map("price_at_purchase") @db.Decimal(10, 2)
  
  // Relations
  order           Order?  @relation(fields: [orderId], references: [id], onDelete: Cascade)
  book            Book?   @relation(fields: [bookId], references: [id], onDelete: SetNull)
  
  @@map("order_items")
}

// Review model
model Review {
  id         Int       @id @default(autoincrement())
  bookId     Int?      @map("book_id")
  customerId Int?      @map("customer_id")
  rating     Int
  comment    String?
  createdAt  DateTime  @default(now()) @map("created_at") @db.Timestamptz
  
  // Relations
  book       Book?     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  customer   Customer? @relation(fields: [customerId], references: [id], onDelete: Cascade)
  
  @@unique([bookId, customerId])
  @@map("reviews")
}
